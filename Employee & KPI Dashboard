        const fileList = document.getElementById('fileList');
        const analyzeBtn = document.getElementById('analyzeBtn');
        const predictionResult = document.getElementById('predictionResult');
        const predictionDetails = document.getElementById('predictionDetails');
        const predictedWinner = document.getElementById('predictedWinner');
        const historyTableBody = document.getElementById('historyTableBody');
        const homeTeam = document.getElementById('homeTeam');
        const awayTeam = document.getElementById('awayTeam');
        const homeTeamStats = document.getElementById('homeTeamStats');
        const awayTeamStats = document.getElementById('awayTeamStats');
        const predictMatchBtn = document.getElementById('predictMatchBtn');
        const matchPredictionResult = document.getElementById('matchPredictionResult');
        const headToHeadResults = document.getElementById('headToHeadResults');
        const homeWinProb = document.getElementById('homeWinProb');
        const drawProb = document.getElementById('drawProb');
        const awayWinProb = document.getElementById('awayWinProb');
        const likelyScore = document.getElementById('likelyScore');
        const downloadBtn = document.getElementById('downloadBtn');
        
        // Tab switching
        winnerTab.addEventListener('click', () => {
            winnerTab.classList.add('bg-indigo-600');
            winnerTab.classList.remove('hover:bg-white/10');
            matchTab.classList.remove('bg-indigo-600');
            matchTab.classList.add('hover:bg-white/10');
            dataTab.classList.remove('bg-indigo-600');
            dataTab.classList.add('hover:bg-white/10');
            winnerContent.classList.remove('hidden');
            matchContent.classList.add('hidden');
            dataUploadContent.classList.add('hidden');
        });
        
        matchTab.addEventListener('click', () => {
            matchTab.classList.add('bg-indigo-600');
            matchTab.classList.remove('hover:bg-white/10');
            winnerTab.classList.remove('bg-indigo-600');
            winnerTab.classList.add('hover:bg-white/10');
            dataTab.classList.remove('bg-indigo-600');
            dataTab.classList.add('hover:bg-white/10');
            matchContent.classList.remove('hidden');
            winnerContent.classList.add('hidden');
            dataUploadContent.classList.add('hidden');
        });
        
        dataTab.addEventListener('click', () => {
            dataTab.classList.add('bg-indigo-600');
            dataTab.classList.remove('hover:bg-white/10');
            winnerTab.classList.remove('bg-indigo-600');
            winnerTab.classList.add('hover:bg-white/10');
            matchTab.classList.remove('bg-indigo-600');
            matchTab.classList.add('hover:bg-white/10');
            dataUploadContent.classList.remove('hidden');
            winnerContent.classList.add('hidden');
            matchContent.classList.add('hidden');
        });
        
        // File upload handling
        csvUpload.addEventListener('change', (e) => {
            const files = e.target.files;
            if (files.length > 0) {
                fileList.innerHTML = '';
                
                for (let i = 0; i < files.length; i++) {
                    const file = files[i];
                    const fileItem = document.createElement('div');
                    fileItem.className = 'flex items-center justify-between bg-gray-50 p-3 rounded-lg';
                    fileItem.innerHTML = `
                        <div class="flex items-center">
                            <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center mr-3">
                                <i class="fas fa-file-csv text-blue-600"></i>
                            </div>
                            <div>
                                <div class="font-medium text-gray-800">${file.name}</div>
                                <div class="text-xs text-gray-500">${(file.size / 1024).toFixed(1)} KB</div>
                            </div>
                        </div>
                        <button class="text-red-500 hover:text-red-700 delete-file" data-index="${i}">
                            <i class="fas fa-times"></i>
                        </button>
                    `;
                    fileList.appendChild(fileItem);
                }
                
                uploadedFiles.classList.remove('hidden');
                
                // Add event listeners to delete buttons
                document.querySelectorAll('.delete-file').forEach(btn => {
                    btn.addEventListener('click', (e) => {
                        const index = parseInt(e.target.closest('button').getAttribute('data-index'));
                        removeFile(index);
                    });
                });
            }
        });
        
        function removeFile(index) {
            const dt = new DataTransfer();
            const input = document.getElementById('csvUpload');
            
            for (let i = 0; i < input.files.length; i++) {
                if (i !== index) {
                    dt.items.add(input.files[i]);
                }
            }
            
            input.files = dt.files;
            
            // Trigger change event to update UI
            const event = new Event('change');
            input.dispatchEvent(event);
            
            if (input.files.length === 0) {
                uploadedFiles.classList.add('hidden');
            }
        }
        
        // Analyze button click
        analyzeBtn.addEventListener('click', () => {
            // Show loading state
            analyzeBtn.innerHTML = '<i class="fas fa-circle-notch rotate mr-2"></i> Analyzing...';
            analyzeBtn.disabled = true;
            
            // Simulate analysis (in a real app, this would be an API call)
            setTimeout(() => {
                // Generate mock prediction results
                generatePredictionResults();
                
                // Switch to winner prediction tab
                winnerTab.click();
                
                // Reset analyze button
                analyzeBtn.innerHTML = '<i class="fas fa-brain mr-2"></i> Analyze Data & Generate Prediction';
                analyzeBtn.disabled = false;
            }, 2000);
        });
        
        // Generate mock prediction results
        function generatePredictionResults() {
            // Update prediction result
            predictionResult.classList.add('hidden');
            predictionDetails.classList.remove('hidden');
            predictionDetails.classList.add('fade-in');
            
            // Update historical data table
            const mockHistory = [
                { season: '2022-23', winner: 'Manchester City', points: 89, gd: 61 },
                { season: '2021-22', winner: 'Manchester City', points: 93, gd: 73 },
                { season: '2020-21', winner: 'Manchester City', points: 86, gd: 51 },
                { season: '2019-20', winner: 'Liverpool', points: 99, gd: 52 },
                { season: '2018-19', winner: 'Manchester City', points: 98, gd: 72 },
                { season: '2017-18', winner: 'Manchester City', points: 100, gd: 79 }
            ];
            
            historyTableBody.innerHTML = '';
            mockHistory.forEach(season => {
                const row = document.createElement('tr');
                row.className = 'hover:bg-gray-50';
                row.innerHTML = `
                    <td class="px-6 py-4 whitespace-nowrap font-medium">${season.season}</td>
                    <td class="px-6 py-4 whitespace-nowrap">${season.winner}</td>
                    <td class="px-6 py-4 whitespace-nowrap">${season.points}</td>
                    <td class="px-6 py-4 whitespace-nowrap">+${season.gd}</td>
                `;
                historyTableBody.appendChild(row);
            });
            
            // In a real app, this would come from the analysis of the uploaded CSV files
            predictedWinner.textContent = 'Manchester City';
        }
        
        // Team selection for match prediction
        homeTeam.addEventListener('change', (e) => {
            if (e.target.value) {
                homeTeamStats.classList.remove('hidden');
            } else {
                homeTeamStats.classList.add('hidden');
            }
            updateHeadToHead();
        });
        
        awayTeam.addEventListener('change', (e) => {
            if (e.target.value) {
                awayTeamStats.classList.remove('hidden');
            } else {
                awayTeamStats.classList.add('hidden');
            }
            updateHeadToHead();
        });
        
        // Update head-to-head results
        function updateHeadToHead() {
            const home = homeTeam.value;
            const away = awayTeam.value;
            
            if (home && away) {
                // Generate mock head-to-head data
                const mockResults = [
                    { date: '2023-05-15', home: 'Man City', away: 'Liverpool', score: '4-1', winner: 'home' },
                    { date: '2022-12-22', home: 'Liverpool', away: 'Man City', score: '1-0', winner: 'home' },
                    { date: '2022-04-10', home: 'Man City', away: 'Liverpool', score: '2-2', winner: 'draw' },
                    { date: '2021-10-03', home: 'Liverpool', away: 'Man City', score: '2-2', winner: 'draw' },
                    { date: '2021-02-07', home: 'Liverpool', away: 'Man City', score: '1-4', winner: 'away' }
                ];
                
                let html = `
                    <h3 class="text-lg font-semibold mb-4 text-white">Last 5 Meetings</h3>
                    <div class="space-y-3">
                `;
                
                mockResults.forEach(match => {
                    html += `
                        <div class="bg-white/10 p-3 rounded-lg flex justify-between items-center">
                            <div class="text-sm">${new Date(match.date).toLocaleDateString()}</div>
                            <div class="font-medium">
                                ${match.home} ${match.score} ${match.away}
                            </div>
                            <div class="text-sm">
                                ${match.winner === 'home' ? 'Home win' : match.winner === 'away' ? 'Away win' : 'Draw'}
                            </div>
                        </div>
                    `;
                });
                
                html += `
                    </div>
                    <div class="mt-4 grid grid-cols-3 gap-4 text-center">
                        <div class="bg-green-500/20 p-2 rounded-lg">
                            <div class="text-xl font-bold">3</div>
                            <div class="text-xs">Home Wins</div>
                        </div>
                        <div class="bg-yellow-500/20 p-2 rounded-lg">
                            <div class="text-xl font-bold">2</div>
                            <div class="text-xs">Draws</div>
                        </div>
                        <div class="bg-red-500/20 p-2 rounded-lg">
                            <div class="text-xl font-bold">0</div>
                            <div class="text-xs">Away Wins</div>
                        </div>
                    </div>
                `;
                
                headToHeadResults.innerHTML = html;
            } else {
                headToHeadResults.innerHTML = 'Select both teams to view head-to-head results';
            }
        }
        
        // Predict match button click
        predictMatchBtn.addEventListener('click', () => {
            const home = homeTeam.value;
            const away = awayTeam.value;
            
            if (!home || !away) {
                alert('Please select both teams');
                return;
            }
            
            if (home === away) {
                alert('Please select different teams');
                return;
            }
            
            // Show loading state
            predictMatchBtn.innerHTML = '<i class="fas fa-circle-notch rotate mr-2"></i> Predicting...';
            predictMatchBtn.disabled = true;
            
            // Simulate prediction (in a real app, this would be an API call)
            setTimeout(() => {
                // Generate mock probabilities
                const homeWin = Math.floor(Math.random() * 30) + 50; // 50-80%
                const draw = Math.floor(Math.random() * 20) + 10; // 10-30%
                const awayWin = 100 - homeWin - draw;
                
                // Update UI
                homeWinProb.textContent = `${homeWin}%`;
                drawProb.textContent = `${draw}%`;
                awayWinProb.textContent = `${awayWin}%`;
                
                // Set likely scoreline
                const homeGoals = Math.floor(Math.random() * 3) + 1;
                const awayGoals = Math.floor(Math.random() * 2);
                likelyScore.textContent = `${homeGoals}-${awayGoals}`;
                
                // Show results
                matchPredictionResult.classList.remove('hidden');
                matchPredictionResult.classList.add('fade-in');
                
                // Reset button
                predictMatchBtn.innerHTML = '<i class="fas fa-magic mr-2"></i> Predict Match Outcome';
                predictMatchBtn.disabled = false;
            }, 1500);
        });
        
        // Download code functionality
        downloadBtn.addEventListener('click', () => {
            // Get the current HTML content
            const htmlContent = document.documentElement.outerHTML;
            
            // Create a Blob with the HTML content
            const blob = new Blob([htmlContent], { type: 'text/html' });
            
            // Create a download link
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = 'premier-league-predictor.html';
            
            // Trigger the download
            document.body.appendChild(a);
            a.click();
            
            // Clean up
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
            
            // Show confirmation
            const originalText = downloadBtn.innerHTML;
            downloadBtn.innerHTML = '<i class="fas fa-check mr-2"></i> Downloaded!';
            
            setTimeout(() => {
                downloadBtn.innerHTML = originalText;
            }, 2000);
        });
        
        // Initialize
        document.addEventListener('DOMContentLoaded', () => {
            // Set default tab
            winnerTab.click();
        });
    </script>
</body>
</html>
