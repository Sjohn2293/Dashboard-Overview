  <script>
    // Initialize Lucide icons
    lucide.createIcons();

    // Page navigation functionality
    function showPage(pageId) {
      // Hide all pages
      document.querySelectorAll('.page-content').forEach(page => {
        page.classList.add('hidden');
      });
      
      // Show selected page
      document.getElementById(`${pageId}-page`).classList.remove('hidden');
      
      // Update active nav button
      document.querySelectorAll('.nav-button').forEach(button => {
        button.classList.remove('active', 'bg-blue-500', 'text-white');
        button.classList.add('text-gray-700', 'hover:bg-gray-100');
      });
      
      // Set current button as active
      const activeButton = document.querySelector(`button[onclick="showPage('${pageId}')"]`);
      activeButton.classList.add('active', 'bg-blue-500', 'text-white');
      activeButton.classList.remove('text-gray-700', 'hover:bg-gray-100');
    }

    // Settings tab functionality
    function showSettingsTab(tabId) {
      // Hide all tab contents
      document.querySelectorAll('.settings-tab-content').forEach(tab => {
        tab.classList.add('hidden');
      });
      
      // Show selected tab content
      document.getElementById(`${tabId}-settings`).classList.remove('hidden');
      
      // Update active tab button
      document.querySelectorAll('.settings-tab').forEach(tab => {
        tab.classList.remove('active', 'border-blue-500', 'text-blue-600');
        tab.classList.add('border-transparent', 'text-gray-500', 'hover:text-gray-700', 'hover:border-gray-300');
      });
      
      // Set current tab as active
      const activeTab = document.querySelector(`button[onclick="showSettingsTab('${tabId}')"]`);
      activeTab.classList.add('active', 'border-blue-500', 'text-blue-600');
      activeTab.classList.remove('border-transparent', 'text-gray-500', 'hover:text-gray-700', 'hover:border-gray-300');
    }

    // Modal functionality
    function showAddEmployeeModal() {
      document.getElementById('add-employee-modal').classList.remove('hidden');
    }

    function showEditEmployeeModal(employeeId) {
      // In a real app, you would load employee data based on the ID
      document.getElementById('edit-employee-modal').classList.remove('hidden');
    }

    function hideModal(modalId) {
      document.getElementById(modalId).classList.add('hidden');
    }

    function deleteEmployee(employeeId) {
      if (confirm('Are you sure you want to delete this employee?')) {
        alert(`Employee ${employeeId} would be deleted in a real application`);
        // In a real app, you would make an API call to delete the employee
      }
    }

    // Initialize the dashboard page on load
    document.addEventListener('DOMContentLoaded', function() {
      showPage('home');
    });
  </script>
</body>
</html>
