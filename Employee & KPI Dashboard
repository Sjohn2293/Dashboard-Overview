    <script>
        // Sample employee data - initialize with empty array to force file upload
        let employees = [];

        // Page Navigation
        document.addEventListener('DOMContentLoaded', function() {
            const navButtons = document.querySelectorAll('.nav-btn');
            const pages = document.querySelectorAll('.page');
            
            navButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const targetPage = this.getAttribute('data-page');
                    
                    // Remove active class from all buttons and pages
                    navButtons.forEach(btn => btn.classList.remove('active'));
                    pages.forEach(page => page.classList.remove('active'));
                    
                    // Add active class to clicked button and target page
                    this.classList.add('active');
                    const targetElement = document.getElementById(targetPage);
                    if (targetElement) {
                        targetElement.classList.add('active');
                    }
                });
            });

            // Set current date for date inputs
            const today = new Date().toISOString().split('T')[0];
            const dashboardDateEl = document.getElementById('dashboardDate');
            const attendanceDateEl = document.getElementById('attendanceDate');
            
            if (dashboardDateEl) dashboardDateEl.value = today;
            if (attendanceDateEl) attendanceDateEl.value = today;

            // File upload handlers
            document.getElementById('dataFileInput').addEventListener('change', handleDataFileUpload);
            document.getElementById('employeeFileInput').addEventListener('change', handleEmployeeFileUpload);

            // Check for stored employees
            const storedEmployees = localStorage.getItem('employees');
            if (storedEmployees) {
                employees = JSON.parse(storedEmployees);
                updateEmployeeDisplay();
            } else {
                // Show initial message if no employees
                showNoEmployeesMessage();
            }
        });

        function showNoEmployeesMessage() {
            const grid = document.getElementById('employeeGrid');
            if (grid && employees.length === 0) {
                grid.innerHTML = `
                    <div style="grid-column: 1/-1; text-align: center; padding: 3rem; background: #f9fafb; border-radius: 0.5rem;">
                        <div style="font-size: 3rem; color: #9ca3af; margin-bottom: 1rem;">üë•</div>
                        <h3 style="font-weight: 600; margin-bottom: 0.5rem;">No Employees Yet</h3>
                        <p style="color: #6b7280;">Upload an employee file to get started</p>
                    </div>
                `;
            }
        }

        <!-- File upload functions
        function handleDataFileUpload(event) {
            const file = event.target.files[0];
            if (file) {
                // Simulate reading CSV data
                const sampleData = [
                    ['Employee Name', 'Department', 'Revenue', 'Productivity Score', 'Customer Satisfaction'],
                    ['John Doe', 'Sales', '25000', '88', '4.2'],
                    ['Jane Smith', 'Marketing', '32000', '92', '4.5'],
                    ['Mike Johnson', 'IT', '28000', '85', '4.0'],
                    ['Sarah Wilson', 'HR', '18000', '90', '4.3'],
                    ['David Brown', 'Sales', '35000', '94', '4.6']
                ];

                displayDataPreview(sampleData);
                alert(`Data file "${file.name}" uploaded successfully!`);
            }
        }

        function displayDataPreview(data) {
            const table = document.getElementById('previewTable');
            const rowCount = document.getElementById('rowCount');
            
            // Clear existing content
            table.innerHTML = '';
            
            // Create header
            const thead = document.createElement('thead');
            const headerRow = document.createElement('tr');
            data[0].forEach(header => {
                const th = document.createElement('th');
                th.textContent = header;
                headerRow.appendChild(th);
            });
            thead.appendChild(headerRow);
            table.appendChild(thead);
            
            // Create body
            const tbody = document.createElement('tbody');
            for (let i = 1; i < data.length; i++) {
                const row = document.createElement('tr');
                data[i].forEach(cell => {
                    const td = document.createElement('td');
                    td.textContent = cell;
                    row.appendChild(td);
                });
                tbody.appendChild(row);
            }
            table.appendChild(tbody);
            
            // Update row count and show preview
            rowCount.textContent = `${data.length - 1} rows uploaded`;
            document.getElementById('dataPreview').style.display = 'block';
        }

        function handleEmployeeFileUpload(event) {
            const file = event.target.files[0];
            if (file) {
                // Simulate reading employee data from CSV
                const newEmployees = [
                    { name: 'Sarah Wilson', email: 'sarah@company.com', department: 'HR', jobTitle: 'HR Manager' },
                    { name: 'David Brown', email: 'david@company.com', department: 'Sales', jobTitle: 'Sales Executive' }
                ];

                // Add new employees
                newEmployees.forEach(emp => {
                    const newId = Math.max(...employees.map(e => e.id)) + 1;
                    employees.push({ ...emp, id: newId });
                });

                alert(`Employee file "${file.name}" uploaded successfully! Added ${newEmployees.length} new employees.`);
                updateEmployeeDisplay();
            }
        }

        // Modal Functions
        function showAddEmployeeModal() {
            document.getElementById('addEmployeeModal').classList.add('active');
        }

        function showEditEmployeeModal() {
            document.getElementById('editEmployeeModal').classList.add('active');
        }

        function closeModal() {
            document.querySelectorAll('.modal').forEach(modal => {
                modal.classList.remove('active');
            });
        }

        // Employee functions
        function editEmployee(id) {
            const employee = employees.find(emp => emp.id === id);
            if (employee) {
                document.getElementById('editEmployeeId').value = employee.id;
                document.getElementById('editName').value = employee.name;
                document.getElementById('editEmail').value = employee.email;
                document.getElementById('editDepartment').value = employee.department;
                document.getElementById('editJobTitle').value = employee.jobTitle;
                showEditEmployeeModal();
            }
        }

        function deleteEmployee(id) {
            if (confirm('Are you sure you want to delete this employee?')) {
                employees = employees.filter(emp => emp.id !== id);
                // Save to localStorage
                localStorage.setItem('employees', JSON.stringify(employees));
                alert('Employee deleted successfully!');
                updateEmployeeDisplay();
            }
        }

        function updateEmployeeDisplay() {
            const grid = document.getElementById('employeeGrid');
            if (!grid) return;
            
            grid.innerHTML = employees.map(emp => {
                const initials = emp.name.split(' ').map(n => n[0]).join('');
                const performance = 80 + Math.floor(Math.random() * 15);
                
                return `
                    <div class="employee-card">
                        <div class="employee-avatar">${initials}</div>
                        <h3 style="font-weight: bold;">${emp.name}</h3>
                        <p style="color: #6b7280;">${emp.jobTitle}</p>
                        <p style="color: #6b7280; font-size: 0.875rem;">${emp.department} Department</p>
                        <div class="progress">
                            <div class="progress-bar" style="width: ${performance}%"></div>
                        </div>
                        <small>Performance: ${performance}%</small>
                        <div style="display: flex; justify-content: space-between; margin-top: 1rem; padding-top: 1rem; border-top: 1px solid #e5e7eb;">
                            <button class="btn btn-primary" style="font-size: 0.875rem; padding: 0.25rem 0.75rem;" onclick="editEmployee(${emp.id})">
                                <span>‚úèÔ∏è</span> Edit
                            </button>
                            <button class="btn btn-danger" style="font-size: 0.875rem; padding: 0.25rem 0.75rem;" onclick="deleteEmployee(${emp.id})">
                                <span>üóëÔ∏è</span> Delete
                            </button>
                        </div>
                    </div>
                `;
            }).join('');

            // Update attendance table on attendance page
            updateAttendanceTable();
        }

        function updateAttendanceTable() {
            const tbody = document.getElementById('attendanceTableBody');
            if (!tbody) return;
            
            if (employees.length === 0) {
                tbody.innerHTML = `
                    <tr>
                        <td colspan="8" style="text-align: center; padding: 2rem; color: #6b7280;">
                            No employees found. Please upload employee data first.
                        </td>
                    </tr>
                `;
                return;
            }
            
            tbody.innerHTML = employees.map(emp => {
                const attendanceData = ['Present', 'Present', 'Present', 'Present', 'Present'];
                const presentCount = attendanceData.filter(status => status === 'Present').length;
                const attendancePercentage = (presentCount / 5) * 100;
                
                return `
                    <tr>
                        <td style="font-weight: 500;">${emp.name}</td>
                        <td>
                            <select class="attendance-select" data-employee="${emp.id}" data-day="0">
                                <option>Present</option>
                                <option>Absent</option>
                                <option>Late</option>
                                <option>Half Day</option>
                            </select>
                        </td>
                        <td>
                            <select class="attendance-select" data-employee="${emp.id}" data-day="1">
                                <option>Present</option>
                                <option>Absent</option>
                                <option>Late</option>
                                <option>Half Day</option>
                            </select>
                        </td>
                        <td>
                            <select class="attendance-select" data-employee="${emp.id}" data-day="2">
                                <option>Present</option>
                                <option>Absent</option>
                                <option>Late</option>
                                <option>Half Day</option>
                            </select>
                        </td>
                        <td>
                            <select class="attendance-select" data-employee="${emp.id}" data-day="3">
                                <option>Present</option>
                                <option>Absent</option>
                                <option>Late</option>
                                <option>Half Day</option>
                            </select>
                        </td>
                        <td>
                            <select class="attendance-select" data-employee="${emp.id}" data-day="4">
                                <option>Present</option>
                                <option>Absent</option>
                                <option>Late</option>
                                <option>Half Day</option>
                            </select>
                        </td>
                        <td style="text-align: center; font-weight: 500; color: #10b981;">${presentCount}/5</td>
                        <td style="text-align: center;">
                            <span style="font-weight: 500; color: ${attendancePercentage >= 80 ? '#10b981' : '#f97316'};">
                                ${attendancePercentage}%
                            </span>
                        </td>
                    </tr>
                `;
            }).join('');

            // Add event listeners to attendance selects
            document.querySelectorAll('.attendance-select').forEach(select => {
                select.addEventListener('change', updateAttendanceStats);
            });
        }

        function updateAttendanceStats() {
            // This would calculate and update the attendance statistics
            // For now, we'll just show an example
            console.log('Attendance updated');
        }

        // Close modal when clicking outside
        document.querySelectorAll('.modal').forEach(modal => {
            modal.addEventListener('click', function(e) {
                if (e.target === this) {
                    closeModal();
                }
            });
        });

        // Form submissions
        document.getElementById('addEmployeeForm').addEventListener('submit', function(e) {
            e.preventDefault();
            alert('Employee added successfully!');
            closeModal();
            this.reset();
        });

        document.getElementById('editEmployeeForm').addEventListener('submit', function(e) {
            e.preventDefault();
            alert('Employee updated successfully!');
            closeModal();
        });
    </script>
</body>
</html>
